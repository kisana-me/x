<div class="post">
  <div class="post-account">
    <%= link_to(post.account.name, account_path(post.account.name_id)) %>
  </div>
  <div class="post-info">
    <div>
      <% if(post.replied) %>
        <%= link_to("返信", post_path(post.replied.aid)) %>
      <% end %>
    </div>
    <%= link_to(time_ago_in_words_kanji(post.created_at), post_path(post.aid)) %>
  </div>
  <div class="post-content">
    <%= simple_format(post.content) %>
  </div>
  <div class="post-console" id="<%= post.aid + '-console' %>">
    <%= render "posts/console", post: post %>
  </div>
</div>
