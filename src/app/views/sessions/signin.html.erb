<% content_for :title, "既存口座進入" %>

<h1>既存口座進入</h1>

<%= form_with(model: @account, scope: :signin, url: signin_path, method: :post, data: { turbo: false }) do |form| %>
  <%= render "shared/error_messages", instead: @account %>
  <div>
    <%= form.label :name_id, style: "display: block" %>
    <%= form.text_field :name_id, class: "account-new-textfield" %>
  </div>
  <br />
  <div>
    <%= form.label :password, style: "display: block" %>
    <%= form.password_field :password, value: @account.password, class: "account-new-textfield" %>
  </div>
  <br />
  <div>
    <%= form.submit "進入", class: "account-new-button" %>
  </div>
<% end %>
