<%= form_with(url: login_path, method: :post, local: true) do |form| %>
  <% if @login_error %>
    <div style="color: red">
      <%= @login_error %>
    </div>
  <% end %>
  <div>
    <%= form.label :login_password, I18n.t('activerecord.attributes.application.login_password'), style: "display: block" %>
    <%= form.text_field :login_password, value: params[:login_password] %>
  </div>

  <div>
    <%= form.submit "進入" %>
  </div>
<% end %>